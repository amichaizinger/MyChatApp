<Window x:Class="ChatAppSOLID.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAppSOLID"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="900">

    <Grid>
        <!-- Background with gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6B7280" Offset="0"/>
                <GradientStop Color="#FF1F2937" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main content -->
        <StackPanel VerticalAlignment="Center" 
               HorizontalAlignment="Center" 
               Width="300">
            <!-- Welcome Text -->
            <TextBlock Text="Welcome"
                  FontSize="36"
                  FontWeight="Bold"
                  Foreground="White"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,40"/>

            <!-- Username Box with Placeholder -->
            <Grid Margin="0,0,0,20">
                <TextBox x:Name="UsernameBox"
                    Height="40"
                    FontSize="16"
                    Padding="10,0,0,0"
                    VerticalContentAlignment="Center"
                    TextChanged="UsernameBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="#80FFFFFF"
                                           CornerRadius="8"
                                           BorderBrush="#FFFFFFFF"
                                           BorderThickness="1">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                    <TextBox.ToolTip>
                        <ToolTip Content="Enter your username (minimum 8 characters)"/>
                    </TextBox.ToolTip>
                </TextBox>
                <TextBlock IsHitTestVisible="False"
                      Text="Username"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Margin="15,0,0,0"
                      Foreground="#FFB0BEC5"
                      FontSize="16">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=UsernameBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Password Box with Placeholder -->
            <Grid Margin="0,0,0,20">
                <PasswordBox x:Name="PasswordBox"
                        Height="40"
                        FontSize="16"
                        Padding="10,0,0,0"
                        VerticalContentAlignment="Center"
                        PasswordChanged="PasswordBox_PasswordChanged">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Background="#80FFFFFF"
                                           CornerRadius="8"
                                           BorderBrush="#FFFFFFFF"
                                           BorderThickness="1">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                    <PasswordBox.ToolTip>
                        <ToolTip Content="Enter your password (minimum 8 characters)"/>
                    </PasswordBox.ToolTip>
                </PasswordBox>
                <TextBlock x:Name="passwordPlaceHolder" IsHitTestVisible="False"
                      Text="Password"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Margin="15,0,0,0"
                      Foreground="#FFB0BEC5" 
                      FontSize="16">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Password, ElementName=PasswordBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Requirement Text -->
            <Border x:Name="RequirementBox" Background="#20FFFFFF"
               CornerRadius="6"
               Padding="10"
               Margin="0,0,0,20">
                <TextBlock x:Name="requierments" Text="Username and password must be at least 8 characters long"
                      FontSize="13"
                      Foreground="#FFE2E8F0"
                      TextWrapping="Wrap"
                      TextAlignment="Center"/>
            </Border>

            <!-- Login Button -->
            <Button x:Name="LoginButton"
               Content="Login"
               Height="40"
               FontSize="16"
               FontWeight="Bold"
               Margin="0,0,0,40"
               Click="LoginButton_Click"
               IsDefault="True">
                <!-- Changed: Removed KeyDown, Added IsDefault="True" -->
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF3B82F6"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                       CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF60A5FA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Registration Text -->
            <TextBlock HorizontalAlignment="Center">
            <Run Text="If you are not registered, " 
                Foreground="#FFCBD5E1"/>
            <Hyperlink Foreground="#FF60A5FA"
                      Click="RegisterLink_Click">
                <Run Text="register here"/>
            </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>