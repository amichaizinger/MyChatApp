<Window x:Class="ChatAppSOLID.ConnectionError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAppSOLID"
        mc:Ignorable="d"
    Title="Connection Error" 
        Height="200" Width="400"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

        <Border CornerRadius="8" 
            Background="#FF1F2937" 
            BorderBrush="#FF4A5568"
 
            BorderThickness="1"
            Margin="10">
            <StackPanel Margin="20">
                <!-- Header with Icon and Title -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Path Fill="#FFF87171" 
                        Data="M12 2L2 7l10 5 10-5L12 2z" 
                      Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Connection Error" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessage"
                           Text="Could not connect to the server. Please try again later."
                       FontSize="14" 
                       Foreground="#FFE2E8F0"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>

            <!-- OK Button -->
            <Button x:Name="OkButton"
                    Content="OK"
                    Height="40"
                    Width="100"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,20,0,0"
                    Click="OkButton_Click"
                    HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF3B82F6"/> 
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF60A5FA"/>  <!-- Lighter blue on hover -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        </Border>
    </Window>
